<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/token_adapter_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/base_gradient_bg"
    android:padding="@dimen/token_item_padding">

    <com.guarda.ethereum.customviews.RobotoLightTextView
        android:id="@+id/tv_token_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="@string/tokens"
        android:textColor="@color/whiteTextColor"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/list_item_expandable_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_arrow_down" />

    <com.guarda.ethereum.customviews.RobotoTextView
        android:id="@+id/tv_all_tokens_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="5 546 466 USD"
        android:textColor="@color/whiteTextColor"
        android:textSize="16sp" />
</RelativeLayout>

