<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/const_rate"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/rateAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="34dp"
            android:text="@string/rate_app"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/rate_xpl"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rateAppTitle" />

        <RelativeLayout
            android:id="@+id/star_empty_layout"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/button_rate_later"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rateText">

            <ImageView
                android:id="@+id/rate_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_rate_star"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_1"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_1"
                app:srcCompat="@drawable/ic_rate_star"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_2"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_2"
                app:srcCompat="@drawable/ic_rate_star"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_3"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_3"
                app:srcCompat="@drawable/ic_rate_star"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/rate_star_4"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_4"
                app:srcCompat="@drawable/ic_rate_star"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/star_fill_layout"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/button_rate_later"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/star_empty_layout">

            <ImageView
                android:id="@+id/rate_star_fill_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_rate_star_fill"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_fill_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_fill_1"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_fill_1"
                app:srcCompat="@drawable/ic_rate_star_fill"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_fill_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_fill_2"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_fill_2"
                app:srcCompat="@drawable/ic_rate_star_fill"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_fill_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_fill_3"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_fill_3"
                app:srcCompat="@drawable/ic_rate_star_fill"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/rate_star_fill_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rate_star_fill_4"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rate_star_fill_4"
                app:srcCompat="@drawable/ic_rate_star_fill"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_rate_later"
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="24dp"
            android:background="@color/transparent"
            android:fontFamily="Roboto"
            android:text="@string/rate_later"
            android:textAllCaps="false"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_rate_ok"
            app:layout_constraintTop_toBottomOf="@+id/star_fill_layout" />

        <Button
            android:id="@+id/button_rate_ok"
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:layout_marginEnd="20dp"
            android:background="@color/transparent"
            android:fontFamily="Roboto"
            android:text="@string/rate_rate"
            android:textAllCaps="false"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_rate_later"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frame_chat_mail"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/reportRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/rate_report"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/send_to_chat"
            style="@style/colorButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:fontFamily="Roboto"
            android:text="@string/rate_support"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/rate_cancel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@color/transparent"
            android:text="@string/rate_cancel"
            android:textAllCaps="false"
            android:textColor="#B0BEC5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>