<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/toastBase"
    android:id="@+id/custom_toast_container">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/custom_toast_icon"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_clear_x"/>

    <com.guarda.ethereum.customviews.RobotoLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_toast_text"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/whiteTextColor"
        android:text="Не получить стоимость в USD, попробуйте попозже"/>

</LinearLayout>