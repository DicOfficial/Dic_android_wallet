<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_bank_acc"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/whiteTextColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <com.guarda.ethereum.customviews.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bank_name_title"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:text="@string/coinify_bank_name"
            android:layout_gravity="center"
            android:textColor="@color/darkGreyText"/>

        <com.guarda.ethereum.customviews.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bank_name"
            android:textColor="@color/darkGreyText"
            android:orientation="horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp">

        <com.guarda.ethereum.customviews.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_holder_title"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:text="@string/coinify_acc_holder"
            android:layout_gravity="center"
            android:textColor="@color/darkGreyText"/>

        <com.guarda.ethereum.customviews.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_holder"
            android:textColor="@color/darkGreyText"
            android:orientation="horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp">

        <com.guarda.ethereum.customviews.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_currency_title"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:text="@string/coinify_acc_cur"
            android:layout_gravity="center"
            android:textColor="@color/darkGreyText"/>

        <com.guarda.ethereum.customviews.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_currency"
            android:textColor="@color/darkGreyText"
            android:orientation="horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="10dp">

        <com.guarda.ethereum.customviews.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number_title"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:text="@string/coinify_acc_number"
            android:layout_gravity="center"
            android:textColor="@color/darkGreyText"/>

        <com.guarda.ethereum.customviews.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number"
            android:textColor="@color/darkGreyText"
            android:orientation="horizontal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>