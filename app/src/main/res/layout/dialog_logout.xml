    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            app:layout_constraintTop_toTopOf="@id/guideline6"
            app:layout_constraintBottom_toBottomOf="@id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:id="@+id/btn_to_backup"
                style="@style/colorButtonStyle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/logout_backup"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_confirm_loguot" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.093"/>
        <Button
                android:id="@+id/btn_confirm_exit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_enable_gray"
                android:text="@string/exit"
                android:textAllCaps="false"
                android:textColor="@color/baseBlueTextColor"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/btn_to_backup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.09"/>
        <Button
                android:id="@+id/btn_confirm_loguot"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_enable_gray"
                android:text="@string/logout_confirm_exit"
                android:textAllCaps="false"
                android:textColor="@color/baseBlueTextColor"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/btn_confirm_exit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86"/>

    <!--</android.support.constraint.ConstraintLayout>-->

</android.support.constraint.ConstraintLayout>